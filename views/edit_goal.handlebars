<h1>Edit Goal</h1>
<link rel="stylesheet" type="text/css" href="/public/css/goals.css">

<form action="/goals/edit/{{goal._id}}" method="POST">
    <label for="goal_name">Goal Name:</label>
    <input type="text" id="goal_name" name="goal_name" value="{{goal.goal_name}}" required>
    <br>
    <label for="goal_amount">Goal Amount:</label>
    <input type="number" step="0.01" id="goal_amount" name="goal_amount" value="{{goal.goal_amount}}" required>
    <br>
    <label for="goal_date">Target Date:</label>
    <input type="date" id="goal_date" name="goal_date" value="{{goal.target_date}}" required>
    <br>
    <br>
    {{#if error}}
    <div class="error">
        {{error}}
    </div>
    {{/if}}

    <button type="submit">Update Goal</button>
</form>
<button onclick="window.location.href='/goals/viewall'">Back to All Goals</button>
<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"></script>