<h1>All Goals</h1>

<link rel="stylesheet" type="text/css" href="/public/css/dashboard.css">

{{#if error}}
<div class="error">
  {{error}}
</div>
{{/if}}

<div id="error-message" style="display:none;">
  {{#each errors}}
  <p>{{this}}</p>
  {{/each}}
</div>

<h2>Current Goals Set</h2>
<table>
  <thead>
    <tr>
      <th>Created Date</th>
      <th>Goal Purpose</th>
      <th>Goal Name</th>
      <th>Target Date</th>
      <th>Goal Amount</th>
      <th>Minimum Amount to save every month</th>
      <th>Total Savings recorded till now</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each data}}
    <tr class="goal-entry">
      <td>{{created_date}}</td>
      <td>{{goal_purpose}}</td>
      <td>{{goal_name}}</td>
      <td>{{target_date}}</td>
      <td>{{goal_amount}}</td>
      <td>{{monthlySavings}}</td>
      <td>{{savings}}</td>
      <td>
        <button type="button" onclick="window.location.href='/goals/edit/{{_id}}'">Edit</button>
        <button type="button" onclick="window.location.href='/goals/new'">Add Savings</button>
        <button class="del-btn" data-goal-id="{{_id}}">Delete</button>
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>

<button onclick="window.location.href='/dashboard'">Back to Dashboard</button>

<script src="https://code.jquery.com/jquery-2.2.4.min.js"
  integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>

